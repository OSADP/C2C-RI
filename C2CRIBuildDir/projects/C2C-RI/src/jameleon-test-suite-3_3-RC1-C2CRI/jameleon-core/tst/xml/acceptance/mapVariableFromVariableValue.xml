<testcase xmlns="jelly:jameleon">
  <test-case-summary>Tests map-variable to variable attributes with the variable-value tag</test-case-summary>
  <test-case-author>Christian Hargraves</test-case-author>
  <test-case-level>ACCEPTANCE</test-case-level>
  <functional-point-tested>framework</functional-point-tested>
    <junit-session>
        <junit-simple-compare-2-vars 
            functionId="compare two variables; one from one csv file, another from another csv file, using the baseDir attribute">
            <map-variable toVariable="simpleFunctionCompVar1">
                <variable-value>some value</variable-value>
            </map-variable>
            <map-variable toVariable="simpleFunctionCompVar2">
                <variable-value>some value</variable-value>
            </map-variable>
        </junit-simple-compare-2-vars>
    </junit-session>
</testcase>
